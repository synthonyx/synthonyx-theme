{
  "name": "synthonyxai-theme",
  "version": "1.0.0",
  "description": "Synthonyx Technologies Hugo theme",
  "scripts": {
    "dev": "hugo server -D",
    "build:css": "tailwindcss -i themes/synthonyx-theme/assets/css/tailwind.css -o themes/synthonyx-theme/static/css/main.css --minify",
    "watch:css": "tailwindcss -i themes/synthonyx-theme/assets/css/tailwind.css -o themes/synthonyx-theme/static/css/main.css --watch",
    "build": "hugo --minify"
  },
  "devDependencies": {
    "tailwindcss": "^4.1.11",
    "@tailwindcss/cli": "^4.1.11",
    "@tailwindcss/typography": "^0.5.16",
    "@tailwindcss/line-clamp": "^0.4.4",
    "postcss": "^8.4.32",
    "autoprefixer": "^10.4.16"
  }
}
